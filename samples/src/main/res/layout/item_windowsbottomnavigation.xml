<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    app:carbon_maxWidth="72dp">

    <carbon.widget.ImageView
        android:id="@+id/carbon_bottomIcon"
        android:layout_width="@dimen/carbon_iconSize"
        android:layout_height="@dimen/carbon_iconSize"
        android:layout_gravity="center"
        android:duplicateParentState="true"
        app:carbon_tint="@color/carbon_defaultIconColorSecondary" />
</carbon.widget.FrameLayout>
