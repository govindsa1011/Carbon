<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    style="@style/carbon_Toolbar.Flat"
    android:layout_width="match_parent"
    android:layout_height="@dimen/carbon_toolbarHeight"
    app:carbon_navigationIcon="@drawable/carbon_uparrow"
    tools:text="test title">

    <carbon.widget.ImageView
        android:id="@+id/debug"
        style="@style/carbon_ImageView.IconButton"
        app:carbon_src="@drawable/ic_bug_report_black_24dp"
        app:carbon_tooltipText="Show debug options" />

    <carbon.widget.CheckBox
        android:id="@+id/enabled"
        style="@style/carbon_CheckBox.IconButton"
        android:checked="true"
        app:carbon_tooltipText="Enable/disable views" />
</carbon.widget.Toolbar>
