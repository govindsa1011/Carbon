<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <carbon.widget.TextView
        android:id="@+id/carbon_tableHeaderText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:singleLine="true"
        android:textAppearance="@style/carbon_TextAppearance.Body2"
        android:textColor="@color/carbon_defaultTextSecondaryColor" />
</LinearLayout>
